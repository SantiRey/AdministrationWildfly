<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="pu" transaction-type="JTA">
        <jta-data-source>java:/helados</jta-data-source>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./helados;DB_CLOSE_ON_EXIT=FALSE;" />
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.user" value="helados" />
            <property name="javax.persistence.jdbc.password" value="helados" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
